[Unit]
Description=Apache Kafka
Documentation=http://kafka.apache.org/documentation.html
Requires=network.target
After=network.target

[Service]
Type=simple
StandardOutput=null
Environment="KAFKA_HEAP_OPTS={{ kafka_java_heap }}"
Environment="LOG_DIR={{ kafka_log_dir }}"
Environment="JMX_PORT=5556"
Environment="KAFKA_JMX_OPTS=-Dcom.sun.management.jmxremote=true -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -Djava.rmi.server.hostname=kafka-{{ hostvars[private_dns_name]['tags']['Broker_Id'] }}.devqa.li.internal -Dcom.sun.management.jmxremote.rmi.port=5556 "
ExecStart={{ kafka_dir }}/bin/kafka-server-start.sh /etc/kafka/server.properties
ExecStop={{ kafka_dir }}/bin/kafka-server-stop.sh
User={{ kafka_user }}
Group={{ kafka_group }}
Restart=on-failure
LimitNOFILE=infinity
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
Alias=kafka.service
